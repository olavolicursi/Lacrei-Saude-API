# .env.docker
# Exemplo de variáveis de ambiente para Docker
# Copie este arquivo para .env e ajuste os valores conforme necessário

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-dev-key-CHANGE-THIS-IN-PRODUCTION
ALLOWED_HOSTS=localhost,127.0.0.1,web,0.0.0.0

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=lacrei_db
DB_USER=lacrei_user
DB_PASSWORD=lacrei_pass

# Superuser (criado automaticamente no primeiro start)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@lacrei.com
DJANGO_SUPERUSER_PASSWORD=admin123

# CORS (ajuste conforme necessário)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Ambiente
ENVIRONMENT=development
