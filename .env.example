# ==============================================================================
# DJANGO CORE SETTINGS
# ==============================================================================

# Secret key - IMPORTANTE: Gere uma chave única para produção!
# Gere com: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-super-secret-key-change-me-in-production

# Debug mode - SEMPRE False em produção!
DEBUG=True

# Environment: development, staging, production
ENVIRONMENT=development

# Allowed hosts - Liste os domínios permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# ==============================================================================
# DATABASE SETTINGS
# ==============================================================================

DB_ENGINE=postgresql
DB_NAME=lacrei_db
DB_USER=lacrei_user
DB_PASSWORD=lacrei_pass
DB_HOST=localhost
DB_PORT=5432

# ==============================================================================
# JWT AUTHENTICATION
# ==============================================================================

JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# ==============================================================================
# CORS SETTINGS
# ==============================================================================

CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# SSL/HTTPS (para produção, use True)
SECURE_SSL_REDIRECT=False

# Admin notifications
ADMIN_EMAIL=admin@lacrei.com

# Internal IPs (para debug toolbar, etc)
INTERNAL_IPS=127.0.0.1

# ==============================================================================
# EMAIL SETTINGS
# ==============================================================================

EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@lacrei.com
SERVER_EMAIL=server@lacrei.com

# ==============================================================================
# AWS SETTINGS (para produção)
# ==============================================================================

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# ==============================================================================
# REDIS (opcional - para cache e rate limiting)
# ==============================================================================

REDIS_URL=redis://localhost:6379/0

# ==============================================================================
# SENTRY (opcional - monitoramento de erros)
# ==============================================================================

SENTRY_DSN=

# ==============================================================================
# ASAAS (opcional - integração de pagamentos)
# ==============================================================================

ASAAS_API_KEY=
ASAAS_BASE_URL=https://sandbox.asaas.com/api/v3
