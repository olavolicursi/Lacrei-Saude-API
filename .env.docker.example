# .env.docker.example
# Exemplo de variáveis de ambiente para Docker
# COPIE este arquivo para .env.docker e ajuste os valores com suas credenciais reais

# Django Settings
DEBUG=True
SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY-50-CHARS
ALLOWED_HOSTS=localhost,127.0.0.1,web,0.0.0.0

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_NAME=lacrei_db
DB_USER=seu_usuario_postgres
DB_PASSWORD=sua_senha_segura_postgres

# Superuser (criado automaticamente no primeiro start)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=SuaSenhaSeguraAdmin123

# CORS (ajuste conforme necessário)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Ambiente
ENVIRONMENT=development
